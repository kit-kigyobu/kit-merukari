<h1>ユーザ新規登録確認</h1>
<%= form_tag("/users/create",{:multipart => true}) do %>
         <p>ニックネーム</p>
         <%= @user.name%>
         <%= hidden_field_tag "name", @user.name %>

         <p>所属課程・専攻</p>
         <%= @course_name %>
         <%= hidden_field_tag "course_id", @user.course_id %>

         <p>サークル・部活動</p>
         <%= @user.club %>
         <%= hidden_field_tag "club", @user.club %>

         <p>学年</p>
         <%= @user_great %>
         <%= hidden_field_tag "entry_year", @user.entry_year %>

         <p>性別</p>
         <%= @user.gender_i18n %>
         <%= hidden_field_tag "gender", User.genders[@user.gender] %>

         <p>アイコン</p>
         <%= image_tag @user.icon.url %>
         <%= hidden_field_tag :"cache[icon]", @user.icon.cache_name %>

         <%= submit_tag("修正する",name: 'back') %>
         <%= submit_tag("登録") %>
<% end %>
